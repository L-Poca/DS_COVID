# ===================================
# EXEMPLE DE CONFIGURATION .ENV - PROJET DS_COVID
# ===================================
# Copiez ce fichier vers .env et adaptez les valeurs à votre environnement
# Date: 15 octobre 2025

# ===================================
# CHEMINS DU PROJET (À ADAPTER)
# ===================================
PROJECT_ROOT=/chemin/vers/votre/projet/DS_COVID
DATA_DIR=/chemin/vers/vos/données/COVID-19_Radiography_Dataset
MODELS_DIR=/chemin/vers/vos/modèles
RESULTS_DIR=/chemin/vers/vos/résultats
NOTEBOOKS_DIR=/chemin/vers/vos/notebooks

# ===================================
# PARAMÈTRES D'IMAGES
# ===================================
# Taille standard pour transfer learning (224x224)
IMG_WIDTH=224
IMG_HEIGHT=224
IMG_CHANNELS=3

# ===================================
# PARAMÈTRES D'ENTRAÎNEMENT
# ===================================
# Taille de batch (ajustez selon votre RAM/GPU)
BATCH_SIZE=32
# Nombre d'époques (réduisez pour tests rapides)
EPOCHS=50
# Taux d'apprentissage initial
LEARNING_RATE=0.001
# Pourcentage pour validation et test
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.2

# ===================================
# CLASSES DU DATASET COVID-19
# ===================================
CLASS_NAMES=COVID,Lung_Opacity,Normal,Viral Pneumonia
NUM_CLASSES=4

# ===================================
# RANDOM FOREST - HYPERPARAMÈTRES
# ===================================
RF_N_ESTIMATORS=200
RF_MAX_DEPTH=15
RF_MIN_SAMPLES_SPLIT=5
RF_MIN_SAMPLES_LEAF=2

# ===================================
# XGBOOST - HYPERPARAMÈTRES
# ===================================
XGB_N_ESTIMATORS=100
XGB_LEARNING_RATE=0.1
XGB_MAX_DEPTH=3
XGB_MIN_CHILD_WEIGHT=1

# ===================================
# VALIDATION CROISÉE
# ===================================
CV_FOLDS=3
N_JOBS=-1

# ===================================
# TRANSFER LEARNING
# ===================================
PRETRAINED_WEIGHTS=imagenet
FREEZE_BASE_LAYERS=True
FINE_TUNE_LAYERS=10

# ===================================
# CALLBACKS D'ENTRAÎNEMENT
# ===================================
EARLY_STOPPING_PATIENCE=10
REDUCE_LR_PATIENCE=5
REDUCE_LR_FACTOR=0.5
MIN_LR=1e-7

# ===================================
# OPTIMISATION GPU/CPU
# ===================================
TF_ENABLE_ONEDNN_OPTS=0
CUDA_VISIBLE_DEVICES=0

# ===================================
# GESTION MÉMOIRE
# ===================================
# Limitez si vous avez peu de RAM
MAX_IMAGES_PER_CLASS=1000
SAMPLE_SIZE_ANALYSIS=200

# ===================================
# DEBUG ET LOGGING
# ===================================
LOG_LEVEL=INFO
VERBOSE=1
RANDOM_SEED=42

# ===================================
# VISUALISATION
# ===================================
PLOT_STYLE=seaborn-v0_8
COLOR_PALETTE=husl
FIGURE_SIZE_WIDTH=12
FIGURE_SIZE_HEIGHT=8
DPI=100

# ===================================
# EXPORT
# ===================================
MODEL_SAVE_FORMAT=h5
RESULTS_FORMAT=csv
EXPORT_PREDICTIONS=True
SAVE_PLOTS=True