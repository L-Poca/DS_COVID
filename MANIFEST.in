include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include setup.py
include MANIFEST.in

# Source code
recursive-include src/ds_covid *.py
recursive-include src/ds_covid *.yml
recursive-include src/ds_covid *.yaml
recursive-include src/ds_covid *.json

# Documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Notebooks (examples)
include notebooks/*.ipynb
include notebooks/colab_config.py
include colab_setup.py

# Configuration files
include .gitignore
include COLAB_README.md

# Tests
recursive-include tests *.py

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so

# Exclude development files
exclude .git
exclude .github
exclude .vscode
exclude .idea
recursive-exclude * __pycache__
recursive-exclude * *.py[co]